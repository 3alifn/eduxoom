<script>


function pi_checkout_class() {
 const className= '<%=className%>'
 const sectionName= '<%=sectionName%>'
 const student_uuid= '<%=student_uuid%>'
 const subject_code= '<%=subject_code%>';
    $.ajax({
        method: "post",
        url: "/privet/pi/transcript-report-checkout",
        data: {className, sectionName, student_uuid, subject_code},
        dataType: "JSON",
        success: function (res) {
            for (const key in res.checkout) { 
              
              $(`.${res.checkout[key].chapter.split('_')[1]}-${res.checkout[key].bg_color}`).html(res.checkout[key].bg_color=='bg-success'?'&#9650;':res.checkout[key].bg_color=='bg-warning'?'&#9899;':'&#9725;')

            }
        }
    });
    
}

pi_checkout_class()

 

</script>


