<script>



noview.port({
    input_class: 'images',
    append_class: 'images_append',
    file_type: 'image',
    max_kb_size: 1024,
    multiple: true,


  })

function tabledata(){
  $.ajax({
    method: "post",
    url: "/admin/repository/get",
    data: {datatype: 'eventnews'},
    dataType: "JSON",
    success: function (res) {
      $('#tabledata tbody').html(res.tabledata)
    }
  });
}

tabledata()


$("#formdata").on('submit', (event) => {
    event.preventDefault()
    let formdata = new FormData($("#formdata")[0])
    formdata.append('datatype', 'eventnews')
    $('#progressbar').css({ 'width': 1 + '%' }).text();

    $.ajax({
      xhr: function () {
        var xhr = new window.XMLHttpRequest();
        xhr.upload.addEventListener("progress", function (evt) {

          if (evt.lengthComputable) {
            var percentComplete = (evt.loaded / evt.total) * 100;

            $('#progressbar').css({ 'width': percentComplete + '%' }).text(percentComplete + '%')

          }
        }, false);
        return xhr;
      },
      method: "post",
      url: "/admin/setup/repository/post",
      data: formdata,
      mimeType: "multipart/form-data",
      cache: false,
      processData: false,
      contentType: false,
      dataType: "JSON",

      beforeSend: function () {
        $(".submitbtn").addClass("disabled")
        _spin_pull()
      },
      success: function (info) {
        _spin_pop()
        _msg_pull('alert-success', 'Repository add successfully...', null)
        $(".submitbtn").removeClass("disabled")
       tabledata()

      }
    });

  })


$('#formcheckout').on('submit', (event)=>{
  event.preventDefault()
  $.ajax({
  method: "post",
  url: "/admin/repository/rm",
  data: $('#formcheckout').serialize(),
  dataType: "JSON",
  success: function (response) {
    tabledata()

    _msg_pull(response.alert, response.msg)
  }
});
})


function _delbox_push(dataid){
$.ajax({
  method: "post",
  url: "/admin/repository/rm",
  data: {datatype:'eventnews',dataid},
  dataType: "JSON",
  success: function (response) {
    _msg_pull('alert-danger', 'Delete successfully!')
    tabledata()
  }
});
 
}


</script>


</html>