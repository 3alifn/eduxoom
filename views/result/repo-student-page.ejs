<html lang="en">

<head>
  <title>Result student page</title>
  <%- include("../component/metadata.html") %>
</head>

<style>
  .row a {
    text-decoration: none;

  }

</style>

<body onload="pageLoadingTop()">

  <%- include("../component/user-header-nav.html") %>
    <%- include("../component/teacher-offcanvas-nav.html") %>

      <div class="p-2 mt-5 row">

        <center class="mt-3">
          <h6>Open a students</h6>
        </center>

        <div class="col-10 col-md-6 mt-2 m-auto">
          <input class="rounded form-control-sm form-dev p-2 ps-3 border-0"
            style="background-color: rgba(211, 207, 207, 0.26);" type="search" name="" placeholder="Search in page"
            id="search">

        </div>


      </div>

      <div class="row p-2">
        <div id="syncSystemApp" class="col-md-8 m-auto col-11">

          <% for( let index=0; index < students.length; index++ ) { %>
            <a href="/teacher/result/repo-sheet-page/<%=class_name%>/<%=section_name%>/<%=students[index].suuid%>">
            <div class="students-card findcard shadowx pt-1 pb-1">
              <div class="d-flex  justify-content-start align-content-center align-items-center">
                <img class="rounded-circle border border-1 p-1" height="60px" width="60px"
                  src="/image/student/resized/<%=students[index].avatar%>" alt="">
                <p class="fw-semibold text-muted ps-1">
                  <%=students[index].roll%>
                </p>
                <p class="fw-semibold text-muted ps-2  text-truncate">
                  <%=students[index].name%>
                </p>

              </div>
              <code class="p-2 link-hover">Marksheet</code> 
              
              <div class="d-flex  justify-content-center align-content-center align-items-center">
        
                <p class="border fw-semibold border-1 pt-0 pb-0 ps-1 pe-1 rounded ms-1 fw-semibold">
                  
                  <%#=students[index].at_status%>
                </p>
              </div>

            </div>
            </a>

            <% } %>


        </div>

      </div>


</body>

<script>

 
  $(document).ready(function () {
    $("#search").keyup(function () {
      var value = $(this).val().toLowerCase();
      $(".students-card").filter(function () {

        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

      });
    });
  });


</script>

</html>